<link rel="stylesheet" type="text/css" href="/public/new-recipe.css">
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="/public/new-recipe.js"></script>

{{> header}}

<div class='horizontal-center form-wrapper'>
     <form id='recipe-form' action="/new-recipe" method="POST" enctype="multipart/form-data">
          <div id='recipe-directions'>
               <h1>Tell us about your recipe</h1>

               {{!-- Insert image div here --}}
               <input id="recipe-img-upload" type="file" name="recipe-img" accept="image/jpeg, image/png" />


               <input name="recipeTitle" type="text" id='recipe-title' placeholder="Recipe Title" />
               <ol id='recipe-directions-container'>
                    {{!-- <button onClick="createNewStep">Add Step</button> --}}
                    <li>
                         <div class='recipe-direction'>
                              <input name="recipeInstruction" type="text" class='recipe-instruction'
                                   placeholder="First Step" />
                              <img id="link-recipe" src="/public/SVG/link-icon.svg" />

                         </div>
                    </li>
               </ol>
          </div>
          <div id='recipe-ingredients'>
               <h1>Ingredients</h1>
               <ul id='recipe-ingredients-container'>
                    <li>
                         <div class='ingredient-info'>
                              <input name="recipeIngredient" type="text" class='ingredient'
                                   placeholder="New Ingredient" />
                              <input name="ingredientAmount" type="number" class='ingredient-amount'
                                   placeholder="Amount" />
                              <select name="ingredientUnit" class='ingredient-unit'>
                                   <option value='tsp'>tsp</option>
                                   <option value='tbsp'>tbsp</option>
                                   <option value='floz'>fl oz</option>
                                   <option value='cup'>cup</option>
                                   <option value='pint'>pint</option>
                                   <option value='lb'>lb</option>
                                   <option value='ounce'>oz</option>
                                   <option value='g'>g</option>
                              </select>
                              {{!-- <img class="remove-button" src="/public/SVG/remove-icon.svg"> --}}
                         </div>
                    </li>
               </ul>
          </div>
          <input id="submitRecipe" type="submit" value='Done' />

     </form>
</div>
