<div class='recipe-listing-wrapper' onmouseleave="toggleDropDown(event, this, false)">
    <img class="list-add-button" src="/static/SVG/add-to-list-button.svg" onclick="toggleDropDown(event, this, true)"/>
    <div onclick="window.location='./recipe/{{recipe_id}}';">
        <div class='image-card'>
            <img src="static/pasta.jpg"/>
        </div>
        <div class='recipe-data'>
            <h3>{{recipe_name}}</h3>
            <div>Prep Time: {{prep_time}} Difficulty: {{difficulty}}</div>
            <div>
                </u><a href='./profile/{{user_id}}'>{{display_name}}</a>
            </div>
        </div>
    </div>
</div>
